{
  "productName": "HyprConfig",
  "version": "0.1.0",
  "identifier": "com.hyprconfig.app",
  "build": {
    "frontendDist": "ui/dist",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "HyprConfig Settings",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
